<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Chomu" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/blue700</item>
        <item name="android:windowBackground">@color/blue700</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="Theme.Chomu" parent="Base.Theme.Chomu" />

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/bg_chip</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/blue300</item>
        <item name="android:textColor">@color/white</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundedCornersShapeOverlay</item>
    </style>

    <style name="CircularShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCornersShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/blue500</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>